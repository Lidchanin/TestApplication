<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/leftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:textColor="#365899"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/centreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/leftTextView"
        android:layout_alignStart="@+id/leftTextView"
        android:layout_below="@+id/leftTextView"/>

    <TextView
        android:id="@+id/rightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/centreTextView"
        android:layout_alignStart="@+id/centreTextView"
        android:layout_below="@+id/centreTextView"
        android:textColor="#1d2129"/>

</RelativeLayout>